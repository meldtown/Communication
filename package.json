{
  "name": "hub",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:db\" \"npm run start:accordion\"",
    "start:employer_hub": "webpack-dev-server --env employer_hub --port 8282",
    "start:jobsearcher_hub": "webpack-dev-server --env jobsearcher_hub --port 8383",
    "start:templates": "webpack-dev-server --env templates --port 8484",
    "start:accordion": "webpack-dev-server --env accordion --port 8585",
    "start:db": "json-server --watch db.json --host 0.0.0.0 --port 8181",
    "dist": "webpack -p",
    "test": "mocha --reporter spec --require babel-register --require ignore-styles --require jsdom-global/register \"src/**/*.spec.js\"",
    "cover": "nyc npm test",
    "generate": "babel-node db.js",
    "postinstall": "npm run generate",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint:staged": "lint-staged",
    "lint": "npm run lint:js -s & npm run lint:css -s"
  },
  "lint-staged": {
    "*.js": "lint:js",
    "*.scss": "lint:css"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "import"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "mocha": true
    },
    "globals": {
      "api": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "spaced-comment": [
        "error",
        "always"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "lower",
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-element-colon-notation": "single",
      "number-leading-zero": "never",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "indentation": "tab"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "axios-mock-adapter": "^1.7.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "concurrently": "^3.1.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.8.1",
    "eslint-plugin-import": "^2.0.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "faker": "^3.1.0",
    "html-loader": "^0.4.4",
    "ignore-styles": "^5.0.1",
    "jquery-mockjax": "^2.2.1",
    "jsdom": "^9.8.0",
    "jsdom-global": "^2.1.0",
    "json-server": "^0.8.22",
    "lint-staged": "^3.2.0",
    "mocha": "^3.1.2",
    "node-sass": "^3.10.1",
    "nyc": "^8.3.1",
    "postcss-loader": "^1.0.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.4.2",
    "stylelint-config-standard": "^13.0.2",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "2.1.0-beta.8"
  },
  "dependencies": {
    "axios": "^0.15.2",
    "jquery": "^3.1.1",
    "knockout": "^3.4.0",
    "moment": "^2.15.1"
  }
}
