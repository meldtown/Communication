{
  "name": "hub",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:db\" \"npm run start:accordion\" \"npm run start:employer_hub\" \"npm run start:jobsearcher_hub\"",
    "start:employer_hub": "webpack-dev-server --env employer_hub --port 8282",
    "start:jobsearcher_hub": "webpack-dev-server --env jobsearcher_hub --port 8383",
    "start:templates": "webpack-dev-server --env templates --port 8484",
    "start:accordion": "webpack-dev-server --env accordion --port 8585",
    "dist": "webpack -p",
    "dist:watch": "webpack -p --watch",
    "test": "mocha --reporter spec --require babel-register --require ignore-styles --require jsdom-global/register \"src/**/*.spec.js\"",
    "test:teamcity": "nyc --reporter=teamcity mocha --reporter mocha-teamcity-reporter --require babel-register --require ignore-styles --require jsdom-global/register \"src/**/*.spec.js\"",
    "cover": "nyc mocha --reporter spec --require babel-register --require ignore-styles --require jsdom-global/register \"src/**/*.spec.js\"",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:js:teamcity": "eslint --format \"./node_modules/eslint-teamcity/index.js\" --ignore-path .gitignore .",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint:staged": "lint-staged",
    "lint": "npm run lint:js -s & npm run lint:css -s",
    "deploy": "node deploy.js"
  },
  "lint-staged": {
    "*.js": "lint:js",
    "*.scss": "lint:css"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "import"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "mocha": true
    },
    "globals": {
      "api": true,
      "api2": true,
      "google": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "spaced-comment": [
        "error",
        "always"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "lower",
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-element-colon-notation": "single",
      "number-leading-zero": "never",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "indentation": "tab"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.7.0",
    "aws-sdk": "^2.7.27",
    "axios-mock-adapter": "^1.7.1",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-teamcity": "^1.3.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "git-rev": "^0.2.1",
    "html-loader": "^0.4.4",
    "ignore-styles": "^5.0.1",
    "jquery-mockjax": "^2.2.1",
    "jsdom": "^9.9.1",
    "jsdom-global": "^2.1.1",
    "lint-staged": "^3.2.7",
    "mocha": "^3.2.0",
    "mocha-teamcity-reporter": "^1.1.1",
    "node-sass": "^4.3.0",
    "nyc": "^10.1.2",
    "postcss-loader": "^1.2.2",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "jquery": "^3.1.1",
    "jquery-ui": "^1.12.1",
    "knockout": "^3.4.1",
    "moment": "^2.17.1"
  }
}
